{
    "filewatcher.commands": [
        {
            "match": "\\.(lua|po|pot)$",
            "notMatch": "change_file\\.lua$",
            "isAsync": false,
            "autoClearConsole": true,
            "cmd": "powershell -Command \"$path='${workspaceRelativeDir}'; $path=$path -replace '\\\\', '/'; New-Item -ItemType Directory -Force -Path \\\"${currentWorkspace}/change_file\\\"; $content=\\\"change_file=\\\"\\\"$path\\\"\\\"\\\"; $utf8NoBomEncoding = New-Object System.Text.UTF8Encoding($false); [System.IO.File]::WriteAllText(\\\"${currentWorkspace}/change_file/master.lua\\\", $content, $utf8NoBomEncoding); [System.IO.File]::WriteAllText(\\\"${currentWorkspace}/change_file/cave.lua\\\", $content, $utf8NoBomEncoding); [System.IO.File]::WriteAllText(\\\"${currentWorkspace}/change_file/client.lua\\\", $content, $utf8NoBomEncoding)\"",
            "event": "onFileChange"
        }
    ]
}
