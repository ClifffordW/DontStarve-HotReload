{
    "filewatcher.commands": [
        {
            "match": "\\.(lua|po|pot)$",
            "notMatch": "change_file\\.lua$",
            "isAsync": false,
            "autoClearConsole": true,
            "cmd": "powershell -Command \"$path='${workspaceRelativeDir}'; $path=$path -replace '\\\\', '/'; $content=\\\"change_file=\\\"\\\"$path\\\"\\\"\\\"; $content | Out-File -FilePath \\\"${currentWorkspace}/change_file.lua\\\" -Encoding utf8\"",
            "event": "onFileChange",
        }
    ],
}
